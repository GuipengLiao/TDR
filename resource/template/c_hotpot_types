<%
	$DefinitionList
	[
		$*
		{
			$comment
			{
%>
//<% $text %>
<%
			}


			$const
			{
%>
#ifndef _DEF_<% $name %>
#define <% $name %> <% $value %>
#endif//_DEF_<% $name %>
<%
			}

			$enum
			{
%>
typedef enum _<% $name %>
{
<%
				$list
				[
					$*
					{
%>
	<% $name %> = <% $value %> ,
<%					}
				]
%>
}<% $name %>
<%
			}

			$struct
			{
%>
typedef struct _<% $name %>
{
<%				$list
				[
					$*
					{
%>
	<% $type ' ' $name ';' %>
<%
					}
				]
%>
}<% $name %>
<%
			}

			$union
			{
%>
typedef union _<% $name %>
{
<%				$list
				[
					$*
					{
%>
	<% $type ' ' $name ';' %>
<%
					}
				]
%>
}<% $name %>
<%
			}
		
			$typedef
			{
%>
typedef <% $type ' ' $new_type %>;
<%
			}
		}
	]
%>

